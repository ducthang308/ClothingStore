<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:background="@drawable/border"
        tools:ignore="ExtraText,MissingConstraints">

        <!-- Product Information Layout -->
        <LinearLayout
            android:id="@+id/layout_product_info_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <!-- Product Image -->
            <ImageView
                android:id="@+id/product_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ao"
                android:contentDescription="Product Image"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <!-- Product Details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <!-- Product Name -->
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Áo thun ngắn tay nữ trắng,"
                    android:textSize="16sp"
                    android:textStyle="" />

                <TextView
                    android:id="@+id/product_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Size M"
                    android:textSize="14sp"
                   />
                </LinearLayout>
                <!-- Quantity -->
                <TextView
                    android:id="@+id/product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x100"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <!-- Product Price -->
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200.000đ"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

        <!-- Total Payment Section -->
        <LinearLayout
            android:id="@+id/total_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginVertical="16dp">

            <!-- Total Payment Label -->
            <TextView
                android:id="@+id/total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total payment:"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Total Payment Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200.00đ"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>



        <!-- Action Buttons: Cancel order and Payment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <!-- Group 1: Buttons for product info -->
            <LinearLayout
                android:id="@+id/layout_product_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Cancel order button -->
                <Button
                    android:id="@+id/btn_cancel_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel order"
                    android:backgroundTint="@android:color/holo_blue_light" />

                <!-- Payment button -->
                <Button
                    android:id="@+id/btn_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@android:color/holo_blue_light" />
            </LinearLayout>

            <!-- Group 2: Buttons for "Waiting for shipping" -->
            <LinearLayout
                android:id="@+id/layout_shipping_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"> <!-- Initially hidden -->

                <!-- Cancel order button -->
                <Button
                    android:id="@+id/btn_cancel_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel order"
                    android:backgroundTint="@android:color/holo_red_light" />
            </LinearLayout>

            <!-- Group 3: Buttons for "Waiting for delivery" -->
            <LinearLayout
                android:id="@+id/layout_delivery_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <!-- Received button -->
                <Button
                    android:id="@+id/btn_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Received"
                    android:backgroundTint="@android:color/holo_red_light"/>
            </LinearLayout>

            <!-- Group 4: Buttons for "Waiting for review" -->

            <LinearLayout
                android:id="@+id/layout_review_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <!-- Received button -->
                <Button
                    android:id="@+id/btn_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review"
                    android:backgroundTint="@android:color/holo_red_light"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>