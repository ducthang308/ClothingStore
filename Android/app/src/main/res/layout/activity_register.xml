<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9F3FF"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".View.RegisterActivity">

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/imgregister"
            android:layout_gravity="center"/>



        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:drawableLeft="@drawable/baseline_name_24"
            android:hint="Họ tên"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingLeft="5dp">

        </EditText>

        <EditText
            android:id="@+id/edt_birth"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:drawableLeft="@drawable/baseline_cake_24"
            android:hint="Ngày sinh"
            android:inputType="date"
            android:minHeight="48dp"
            android:paddingLeft="5dp">

        </EditText>

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:hint="Số điện thoại"
            android:inputType="phone|number"
            android:minHeight="48dp"
            android:paddingLeft="5dp">

        </EditText>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:drawableLeft="@drawable/baseline_email_24"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingLeft="5dp">

        </EditText>

        <EditText
            android:id="@+id/edt_user"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:drawableLeft="@drawable/baseline_person_24"
            android:hint="Tên đăng nhập"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingLeft="5dp">

        </EditText>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:drawableLeft="@drawable/baseline_security_24"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingLeft="5dp">

        </EditText>

        <EditText
            android:id="@+id/edt_confirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:background="@drawable/border_black"
            android:drawableLeft="@drawable/baseline_security_24"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingLeft="5dp">

        </EditText>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="58dp"
            android:layout_margin="10dp"
            android:text="Đăng ký"
            android:textColor="@color/colorblack"
            android:backgroundTint="#FFFF">

        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Bạn đã có tài khoản? ">

            </TextView>

            <TextView
                android:id="@+id/tv_signin"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Đăng nhập"
                android:textColor="@color/colorRed">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>