<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorwhite"
    android:fitsSystemWindows="true"> <!-- Đảm bảo không bị che khi hiển thị bàn phím -->

    <!-- Thanh Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorwhite"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="TTT Shop"
            android:textColor="@color/colorblack"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="10dp" />
    </LinearLayout>

    <!-- Phần cuộn nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Tin nhắn từ shop -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:padding="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logo_shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:padding="10dp"
                    android:text="Xin chào, cảm ơn bạn đã liên hệ với cửa hàng TTT!"
                    android:background="@drawable/bg_corner_chat_sendme"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <!-- Tin nhắn từ người dùng -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:text="Tôi không thấy đơn hàng của mình đến?"
                    android:background="@drawable/bg_corner_chat"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <!-- Tin nhắn phản hồi của shop -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:padding="8dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/logo_shop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="250dp"
                    android:padding="10dp"
                    android:text="Xin lỗi vì sự bất tiện này, chúng tôi sẽ kiểm tra ngay!"
                    android:background="@drawable/bg_corner_chat_sendme"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Thanh nhập tin nhắn -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorwhite"
            android:src="@drawable/baseline_voicemail_24" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorwhite"
            android:src="@drawable/baseline_attach_file_24" />

        <EditText
            android:id="@+id/edt_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/stroke"
            android:hint="Nhập tin nhắn"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorwhite"
            android:src="@drawable/baseline_send_24" />
    </LinearLayout>
</LinearLayout>
